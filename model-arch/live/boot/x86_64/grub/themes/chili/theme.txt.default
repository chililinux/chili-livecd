# Show a countdown message using the label component
+ label {
  top = 82%
  left = 20%
  width = 60%
  align = "center"
  id = "__timeout__"
  text = "Inicializando em %d segundos"
  color = "#cccccc"
  font = "Unifont Regular 16"
}
